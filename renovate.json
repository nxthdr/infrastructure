{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automergeType": "branch",
      "automerge": true
    },
    {
      "matchManagers": ["asdf"],
      "matchPackageNames": ["python"],
      "allowedVersions": "<3.14",
      "description": "Constrain Python to <3.14 due to PyYAML compatibility issues"
    }
  ]
}
