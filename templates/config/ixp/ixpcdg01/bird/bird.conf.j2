# Peers
## FranceIX
protocol bgp FranceIX1  {
    local 2001:7f8:54::2:198 as 215011;
    neighbor 2001:7f8:54::250 as 51706;
    ipv6 {
        import table on;
        import keep filtered;
        import filter ImportFilter;
        export filter ExportFilter;
    };
}

protocol bgp FranceIX2  {
    local 2001:7f8:54::2:198 as 215011;
    neighbor 2001:7f8:54::251 as 51706;
    ipv6 {
        import table on;
        import keep filtered;
        import filter ImportFilter;
        export filter ExportFilter;
    };
}
